{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "allowSyntheticDefaultImports": false,
    "lib": ["dom"],
    "baseUrl": ".",
    "paths": {
      "@root/*": ["src/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "exclude": [
    "demos",
    "node_modules",
    "dist"
  ]
}
